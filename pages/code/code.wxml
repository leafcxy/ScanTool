<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">内容</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="请输二维码文本" style="height: 5em" value="{{ codeText }}" bindinput="bindInput" />
            <!--<view class="weui-textarea-counter">0/200</view>-->
          </view>
        </view>
    </view>
    <view class="weui-cells__title">二维码</view>
    <view class="weui-form-preview">
      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view hidden="{{ isHidden }}">
            <canvas class="code_canvas" canvas-id="qrCode"></canvas>
          </view>
        </view>
      </view>
      <view class="weui-form-preview__ft">
        <navigator url="" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap="onSave">保存到相册</navigator>
      </view>
    </view>
    <view class="page__bd_spacing">
      <button bindtap="onGenerate" class="weui-btn" type="primary">生成</button>
    </view>
  </view>
</view>